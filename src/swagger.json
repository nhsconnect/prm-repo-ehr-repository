{
  "swagger": "2.0",
  "info": {
    "description": "Service to handle generation of URLs for upload/download from S3",
    "version": "1.0.0",
    "title": "EHR Repository"
  },
  "tags": [],
  "paths": {
    "/health": {
      "get": {
        "tags": [],
        "summary": "Check filestore and database is available",
        "consumes": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Successfully return health check report"
          },
          "500": {
            "description": "Unexpected error, couldn't retrieve health status",
            "schema": {
              "$ref": "#/definitions/ValidationErrors"
            }
          },
          "503": {
            "description": "Filestore or Database is currently unavailable",
            "schema": {
              "$ref": "#/definitions/HealthStatus"
            }
          }
        }
      }
    },
    "/new/patients/{nhsNumber}/health-records/{conversationId}": {
      "get": {
        "tags": [],
        "summary": "Gets health record status through the associated conversation id",
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "nhsNumber",
            "type": "string",
            "required": true
          },
          {
            "in": "path",
            "name": "conversationId",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Health Record is complete"
          },
          "401": {
            "description": "Authorization header missing"
          },
          "403": {
            "description": "Authorization key invalid"
          },
          "404": {
            "description": "Health record with that conversation id not found or pending"
          },
          "422": {
            "description": "Validation failed",
            "schema": {
              "$ref": "#/definitions/ValidationErrors"
            }
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    },
    "/new/patients/{nhsNumber}": {
      "get": {
        "tags": [],
        "summary": "Retrieve current patient health record",
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "nhsNumber",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successful",
            "schema": {
              "$ref": "#/definitions/NewPatientDetails"
            }
          },
          "401": {
            "description": "Authorization header missing"
          },
          "403": {
            "description": "Authorization key invalid"
          },
          "404": {
            "description": "No complete health record found for patient"
          },
          "422": {
            "description": "Validation failed",
            "schema": {
              "$ref": "#/definitions/ValidationErrors"
            }
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    },
    "/messages/{conversationId}/{messageId}": {
      "get": {
        "tags": [],
        "summary": "Gets pre-signed url from s3",
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "conversationId",
            "type": "string",
            "required": true
          },
          {
            "in": "path",
            "name": "messageId",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Retrieves s3 pre-signed URL for the message and sends it as the body"
          },
          "401": {
            "description": "Authorization header missing"
          },
          "403": {
            "description": "Authorization key invalid"
          },
          "404": {
            "description": "Health record with that conversation id not found"
          },
          "422": {
            "description": "Validation failed",
            "schema": {
              "$ref": "#/definitions/ValidationErrors"
            }
          },
          "500": {
            "description": "Failed to get presigned url"
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    },
    "/messages": {
      "post": {
        "tags": [],
        "summary": "Store Health Record Messages in DB",
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/StoreMessages"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Message was successfully stored"
          },
          "401": {
            "description": "Authorization header missing"
          },
          "403": {
            "description": "Authorization key invalid"
          },
          "422": {
            "description": "Validation failed",
            "schema": {
              "$ref": "#/definitions/ValidationErrors"
            }
          },
          "500": {
            "description": "Failed to store message"
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    }
    },
  "securityDefinitions": {
    "api_key": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "definitions": {
    "NewPatientDetails": {
      "type": "object",
      "description": "Retrieves patient's current health record",
      "properties": {
        "data": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "patients"
              ]
            },
            "id": {
              "type": "string"
            },
            "links": {
              "type": "object",
              "properties": {
                "healthRecordExtract": {
                  "type": "string"
                },
                "attachments": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "StoreMessages": {
      "type": "object",
      "properties": {
        "data": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["messages"]
            },
            "id": {
              "type": "string",
              "format": "uuid"
            },
            "attributes": {
              "type": "object",
              "properties": {
                "conversationId": {
                  "type": "string",
                  "format": "uuid"
                },
                "messageType": {
                  "type": "string"
                },
                "nhsNumber": {
                  "type": "string"
                },
                "attachmentMessageIds": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "uuid"
                  }
                }
              }
            }
          }
        }
      },
      "required": ["type", "id", "attributes","conversationId", "messageType"]
    },
    "ValidationErrors": {
      "type": "object",
      "properties": {
        "errors": {
          "type": "array",
          "items": {
            "type": "object",
            "description": "An object with the name of the field in error as the key and the error message as the value",
            "properties": {}
          }
        }
      }
    },
    "HealthStatus": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "node_env": {
          "type": "string"
        },
        "details": {
          "type": "object",
          "properties": {
            "filestore": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "bucketName": {
                  "type": "string"
                },
                "available": {
                  "type": "boolean"
                },
                "writable": {
                  "type": "boolean"
                },
                "error": {
                  "type": "object"
                }
              }
            },
            "database": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "connection": {
                  "type": "boolean"
                },
                "writable": {
                  "type": "boolean"
                },
                "error": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  }
}